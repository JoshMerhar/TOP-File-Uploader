<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/styles.css">
        <title>Edit File</title>
    </head>
    <body>
        <div class="container">
            <div class="main-content">
                <%- include("partials/errors.ejs") %>
                <form action="/library/folder/file/<%= file.id %>/edit" method="POST">
                    <label for="filename">Filename: </label>
                    <input type="text" name="filename" id="filename" maxlength="50" value="<%= file.filename %>" required />
                    <button type="submit">Submit</button>
                </form>
                <a href="/library/folder/file/<%= file.id %>">Cancel</a>
            </div>
        </div>
    </body>
</html>