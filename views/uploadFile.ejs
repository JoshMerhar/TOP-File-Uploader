<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/styles.css">
        <title>File Upload</title>
    </head>
    <body>
        <div class="container">
            <div class="main-content">
                <h1>Upload File</h1>
                <%- include("partials/errors.ejs") %>
                <form class="input-form" action="/library/new-file" enctype="multipart/form-data" method="POST">
                    <div class="form-item">
                        <label for="uploaded_file">File (Max 1 MB / 1,000 kB): </label>
                        <input type="file" name="uploaded_file" />
                    </div>
                    <div class="form-item">
                        <label for="filename">Filename: </label>
                        <input type="text" name="filename" id="filename" maxlength="50" required />
                    </div>
                    <div class="form-item">
                        <label for="file_folder">Folder: </label>
                        <select name="file_folder" id="file_folder" required>
                            <option value="" selected="true" disabled="disabled">--SELECT FOLDER--</option>
                            <% folders.forEach(folder => { %>
                                <option value="<%= folder.id %>"><%= folder.folderName %></option>    
                            <% }) %>
                        </select>
                    </div>
                    <button type="submit" class="submit-button">Submit</button>
                    <a href="/library">Cancel</a>
                </form>
            </div>
        </div>
    </body>
</html>